{
  "manifest_version": 3,
  "name": "MedManager PWA Helper",
  "version": "1.0",
  "description": "Helper extension for MedManager PWA with quick access to install and manage medications",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MedManager - Quick Actions",
    "default_icon": {
      "16": "icons/icon-16x16.svg",
      "32": "icons/icon-32x32.svg",
      "48": "icons/icon-48x48.svg",
      "128": "icons/icon-128x128.svg"
    }
  },
  "icons": {
    "16": "icons/icon-16x16.svg",
    "32": "icons/icon-32x32.svg",
    "48": "icons/icon-48x48.svg",
    "128": "icons/icon-128x128.svg"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:8000/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}